<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.LifeTipsApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">#008080</item>
        <item name="colorPrimaryVariant">#005353</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary -->
        <item name="colorSecondary">#FFC107</item>
        <item name="colorSecondaryVariant">#FFB300</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Background -->
        <item name="android:colorBackground">#FAFAFA</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>

        <!-- Customizations -->
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:windowBackground">#FAFAFA</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:statusBarColor">#005353</item>

        <!-- Use Material3 Typography -->
        <item name="textAppearanceHeadline6">@style/CustomHeadline</item>
    </style>

    <!-- Custom heading font size and style -->
    <style name="CustomHeadline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#212121</item>
    </style>
</resources>
